<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.NestedScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"

    xmlns:android="http://schemas.android.com/apk/res/android">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
 >
    <LinearLayout
            android:gravity="center"
            android:background="#222327"
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize">
            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/txtMain"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textSize="25dp"
                    android:textColor="#ffff"
                    android:text="REITIUM"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>

<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textAlignment="center"
        android:textColor="#FF243D61"
        android:textStyle="bold"
        android:textSize="35sp"
        android:text="GLOBAL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:textAlignment="center"
        android:textColor="#FF243D61"
        android:textStyle="bold"
        android:textSize="35sp"
        android:text="INVESTMENT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:textAlignment="center"
        android:textColor="#FF243D61"
        android:textStyle="bold"
        android:textSize="35sp"
        android:text="MARKETPLACE"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
   </LinearLayout>

<com.example.root.reitium.activites.ExpandableHeightGridView
    android:id="@+id/gridView"
    android:numColumns="2"
    android:nestedScrollingEnabled="true"
    android:horizontalSpacing="15dp"
     android:focusable="false"
    android:verticalSpacing="15dp"
    android:layout_margin="15dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


</com.example.root.reitium.activites.ExpandableHeightGridView>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <LinearLayout

            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom">
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/linerLeft"
                    android:background="#f1f1f1"
                    android:layout_width="0dp"
                    android:layout_height="79dp"
                    android:layout_weight="1"
                    android:layout_gravity="center|bottom"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_marginTop="5dp"
                        android:layout_width="40dp"
                        android:layout_height="36dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_wallet" />

                    <TextView
                        android:ems="10"
                        android:layout_marginTop="5dp"
                        android:id="@+id/txtWallet"
                        android:textSize="15sp"
                        android:textColor="#2b2a2a"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:text="WALLET"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        />
                </LinearLayout>
                <FrameLayout
                    android:background="#f1f1f1"
                    android:layout_weight="0.8"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_marginBottom="1dp"
                        android:id="@+id/imgMain"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:background="#222327"
                        android:padding="15dp"
                        android:src="@drawable/reitiumlogo" />
                    <TextView
                        android:scaleX="1.5"
                        android:background="#222327"
                        android:textAlignment="center"
                        android:text="MARKET"
                        android:textSize="12sp"
                        android:textColor="#f1f1f1"
                        android:layout_marginBottom="10dp"
                        android:layout_gravity="center|bottom"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </FrameLayout>
                <LinearLayout
                    android:id="@+id/linearRight"
                    android:background="#f1f1f1"
                    android:layout_width="0dp"
                    android:layout_height="79dp"
                    android:layout_weight="1"
                    android:layout_gravity="center|bottom"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_marginTop="5dp"
                        android:layout_width="40dp"
                        android:layout_height="36dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_chart" />

                    <TextView
                        android:layout_marginTop="5dp"
                        android:id="@+id/txtPor"
                        android:textSize="15sp"
                        android:textColor="#2b2a2a"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:text="PORTFOLIO"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>
</android.support.v4.widget.NestedScrollView>